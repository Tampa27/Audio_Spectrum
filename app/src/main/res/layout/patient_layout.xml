<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Foto del Paciente -->
        <ImageView
            android:id="@+id/imageViewPacienteFoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Foto del paciente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@tools:sample/avatars" /> <!-- Imagen de ejemplo para vista previa -->

        <!-- Nombre del Paciente -->
        <TextView
            android:id="@+id/textViewPacienteNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/teal_700"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintStart_toEndOf="@id/imageViewPacienteFoto"
            app:layout_constraintTop_toTopOf="@id/imageViewPacienteFoto"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nombre Apellido Paciente" />

        <!-- Edad del Paciente -->
        <TextView
            android:id="@+id/textViewPacienteEdadLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Edad:"
            android:textColor="@color/teal_700"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintStart_toEndOf="@id/imageViewPacienteFoto"
            app:layout_constraintTop_toBottomOf="@id/textViewPacienteNombre" />

        <TextView
            android:id="@+id/textViewPacienteEdad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/teal_700"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintStart_toEndOf="@id/textViewPacienteEdadLabel"
            app:layout_constraintTop_toTopOf="@id/textViewPacienteEdadLabel"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewPacienteEdadLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="30 años" />

        <!-- Sexo del Paciente -->
        <TextView
            android:id="@+id/textViewPacienteSexoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Sexo:"
            android:textColor="@color/teal_700"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintStart_toEndOf="@id/imageViewPacienteFoto"
            app:layout_constraintTop_toBottomOf="@id/textViewPacienteEdadLabel" />

        <TextView
            android:id="@+id/textViewPacienteSexo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/teal_700"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintStart_toEndOf="@id/textViewPacienteSexoLabel"
            app:layout_constraintTop_toTopOf="@id/textViewPacienteSexoLabel"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewPacienteSexoLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Masculino" />

        <!-- DNI del Paciente -->
        <TextView
            android:id="@+id/textViewPacienteDnaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="CI:"
            android:textColor="@color/teal_700"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintStart_toEndOf="@id/imageViewPacienteFoto"
            app:layout_constraintTop_toBottomOf="@id/textViewPacienteSexoLabel"
            app:layout_constraintBottom_toBottomOf="@id/imageViewPacienteFoto"
            app:layout_constraintVertical_bias="0.0"/> <!-- Alinea con la parte superior si hay espacio -->


        <TextView
            android:id="@+id/textViewPacienteDna"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/teal_700"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintStart_toEndOf="@id/textViewPacienteDnaLabel"
            app:layout_constraintTop_toTopOf="@id/textViewPacienteDnaLabel"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewPacienteDnaLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ATGCGTTAACC..." />
        <!-- Botón de Eliminar -->
        <ImageButton
            android:id="@+id/buttonEliminarPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar paciente"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="?attr/colorError" /> <!-- Tinte rojo para el ícono -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>