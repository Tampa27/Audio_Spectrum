<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/purple_200"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.17"
        android:paddingTop="30dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/back_rect"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="IP"
                android:gravity="center"
                android:textStyle="bold"
                style="@style/ProfessionalTextView"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="0.00"
                android:gravity="center"
                style="@style/ProfessionalTextView"
                android:id="@+id/ipText"
                android:textColor="@color/yellow"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:paddingTop="16dp"
            android:text="Umbral:60dB"
            android:gravity="center"
            android:id="@+id/dbText"
            style="@style/ProfessionalTextView"
            />
        <SeekBar
            android:id="@+id/umbralSeek"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:min="10"
            android:progress="60"
            android:max="120"
            android:progressDrawable="@drawable/seek_bar"
            android:minHeight="14dp"
            android:maxHeight="14dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:paddingTop="16dp"
            android:text="Ganancia:1.0"
            android:gravity="center"
            android:id="@+id/gainText"
            style="@style/ProfessionalTextView"
            />
        <SeekBar
            android:id="@+id/gainSeek"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:min="5"
            android:progress="10"
            android:max="100"
            android:progressDrawable="@drawable/seek_bar"
            android:minHeight="14dp"
            android:maxHeight="14dp"
            android:paddingBottom="5dp"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkEnvol"
            android:textSize="14sp"
            android:text="VMedia"
            style="@style/ProfessionalTextView"
            android:checked="false"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/white"
            app:placeholderTextColor="@color/white"
            app:counterTextColor="@color/white"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            android:hint="DiÃ¡metro mm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/diametro"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="2.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:padding="3dp"
            android:background="@drawable/back_rect"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Qm:800L/min"
                android:gravity="center"
                android:id="@+id/qmText"
                style="@style/ProfessionalTextView"
                android:textColor="@color/white"/>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="14sp"-->
<!--                android:text="0.00"-->
<!--                android:gravity="center"-->
<!--                style="@style/ProfessionalTextView"-->
<!--                android:id="@+id/qmText"-->
<!--                android:textColor="@color/yellow"/>-->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.77">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/black"
            android:scaleType="fitCenter"
            android:layout_weight="0.93"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            android:gravity="center"
            android:id="@+id/pacienteText"
            android:textSize="16sp"
            style="@style/ProfessionalTextView"
            android:text="Paciente:Ahmed"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/loading_layout"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</LinearLayout>